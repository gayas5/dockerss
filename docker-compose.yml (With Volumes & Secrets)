version: "3.8"

services:
  tomcat-app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: tomcat-app
    ports:
      - "8080:8080"
    environment:
      - DB_HOST=${DB_HOST}
      - DB_PORT=${DB_PORT}
      - DB_USER=${DB_USER}
      - DB_PASSWORD_FILE=/run/secrets/db_password
    secrets:
      - db_password
    volumes:
      - tomcat_logs:/usr/local/tomcat/logs
    restart: unless-stopped

secrets:
  db_password:
    file: ./secrets/db_password

volumes:
  tomcat_logs:
